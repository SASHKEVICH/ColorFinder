<Window x:Class="ColorFinder.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:local="clr-namespace:ColorFinder"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        Title="ColorFinder" Height="450" Width="800">
    <Grid ShowGridLines="True" Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Image Grid.Row="0" Source="{Binding MainImage}"/>
        
        <Grid Grid.Row="1" ShowGridLines="True" Margin="0 5 0 5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            
            <Rectangle Grid.Column="0" Fill="Gray"/>
            <Rectangle Grid.Column="2" Fill="Gray"/>
            <Rectangle Grid.Column="4" Fill="Gray"/>
        </Grid>
        
        <Grid Grid.Row="2" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" VerticalAlignment="Bottom">Бекренев Александр, 2022 год.</TextBlock>
            <Button 
                Grid.Column="2" 
                Padding="5 10"
                Command="{Binding ImageUploadCommand}"
            >
                Загрузить фото
            </Button>
        </Grid>
    </Grid>
</Window>
